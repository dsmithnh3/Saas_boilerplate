{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@acme/db": ["../../packages/db/src"],
      "@acme/db/*": ["../../packages/db/src/*"],
      "@acme/ui": ["../../packages/ui/src"],
      "@acme/ui/*": ["../../packages/ui/src/*"],
      "@acme/config": ["../../packages/config/src"],
      "@acme/config/*": ["../../packages/config/src/*"],
      "@acme/ai": ["../../packages/ai/src"],
      "@acme/ai/*": ["../../packages/ai/src/*"]
    },
    "noEmit": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
